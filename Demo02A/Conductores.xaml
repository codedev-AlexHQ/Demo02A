<Window x:Class="Demo02A.Conductores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo02A"
        mc:Ignorable="d"
        Title="Conductores" Height="850" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Height="192" Margin="0,62,0,0" Width="200">
            <TextBlock Text="Nombre conductor:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtNombreConductor" Margin="0,0,0,10"/>
            <TextBlock Text="Licencia:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtLicencia" Margin="0,0,0,10"/>
            <TextBlock Text="Transporte:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtTransporte" Margin="0,0,0,10"/>
            <Button Content="Grabar" Width="100" HorizontalAlignment="Center" x:Name="BtnGrabar" Click="BtnGrabar_Click"/>


        </StackPanel>
        <DataGrid x:Name="DataGridConductores"
                  AutoGenerateColumns="True"
                  Grid.Row="1"
                  Margin="0,20,0,0"
                  IsReadOnly="True"
                  AlternatingRowBackground="LightGray"
                  CanUserAddRows="False"/>


    </Grid>
</Window>
