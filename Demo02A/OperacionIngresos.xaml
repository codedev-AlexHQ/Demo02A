<Window x:Class="Demo02A.OperacionIngresos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo02A"
        mc:Ignorable="d"
        Title="OperacionIngresos" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Tipo de Documento:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtTipoDocumento" Margin="0,0,0,10"/>
            <TextBlock Text="Número de Documento:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtNumeroDocumento" Margin="0,0,0,10"/>
            <TextBlock Text="Placa:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPlaca" Margin="0,0,0,10"/>
            <TextBlock Text="Turno:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtTurno" Margin="0,0,0,10"/>
            <TextBlock Text="Nombre del Conductor:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtNombreConductor" Margin="0,0,0,10"/>
            <TextBlock Text="Nombre del Cliente:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtNombreCliente" Margin="0,0,0,10"/>
            <TextBlock Text="Fecha y Hora:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtFechaHora" Margin="0,0,0,10"/>
            <TextBlock Text="Peso de Ingreso:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPesoIngreso" Margin="0,0,0,20"/>
            <Button Content="Grabar" Width="100" HorizontalAlignment="Center" x:Name="BtnGrabar" Click="BtnGrabar_Click"/>
        </StackPanel>

    </Grid>
</Window>
