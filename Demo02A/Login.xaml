<Window x:Class="Demo02A.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo02A"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="10" CornerRadius="5" Width="300" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
           
            <StackPanel>
                <TextBlock Text="Username:" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtUsername" Margin="0,0,0,10"/>
                <TextBlock Text="Password:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="TxtPassword" Margin="0,0,0,20"/>
                <Button Content="Login" Width="100" HorizontalAlignment="Center" x:Name="BtnPageHome" Click="BtnPageHome_Click"/>
            </StackPanel>
        </Border>


    </Grid>
</Window>
